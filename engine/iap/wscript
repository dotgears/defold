#! /usr/bin/env python

VERSION='0.1'
APPNAME='iap'

srcdir = '.'
blddir = 'build'

import waf_dynamo

def set_options(opt):
    opt.tool_options('waf_dynamo')

def init():
    pass

def configure(conf):
    conf.check_tool('waf_dynamo')
    conf.sub_config('src')

def build(bld):
    bld.add_subdirs('src')

def shutdown():
    waf_dynamo.run_tests(valgrind = True)
