# Generic
key_trigger      { input: KEY_ENTER              action: "ok" }
key_trigger      { input: KEY_DOWN               action: "move_down" }
key_trigger      { input: KEY_UP                 action: "move_up" }
key_trigger      { input: KEY_LEFT               action: "move_left" }
key_trigger      { input: KEY_RIGHT              action: "move_right" }

# Pseudo-fire for jetbot
key_trigger      { input: KEY_LSHIFT             action: "look_right" }

gamepad_trigger  { input: GAMEPAD_RPAD_DOWN      action: "ok" }
gamepad_trigger  { input: GAMEPAD_RPAD_RIGHT     action: "back" }
gamepad_trigger  { input: GAMEPAD_LSTICK_LEFT    action: "move_left" }
gamepad_trigger  { input: GAMEPAD_LSTICK_RIGHT   action: "move_right" }
gamepad_trigger  { input: GAMEPAD_LSTICK_UP      action: "move_up" }
gamepad_trigger  { input: GAMEPAD_LSTICK_DOWN    action: "move_down" }
gamepad_trigger  { input: GAMEPAD_RSTICK_LEFT    action: "look_left" }
gamepad_trigger  { input: GAMEPAD_RSTICK_RIGHT   action: "look_right" }
gamepad_trigger  { input: GAMEPAD_RSTICK_UP      action: "look_up" }
gamepad_trigger  { input: GAMEPAD_RSTICK_DOWN    action: "look_down" }
gamepad_trigger  { input: GAMEPAD_RTRIGGER       action: "increase" }
gamepad_trigger  { input: GAMEPAD_LTRIGGER       action: "decrease" }
gamepad_trigger  { input: GAMEPAD_RSHOULDER      action: "boost" }
gamepad_trigger  { input: GAMEPAD_LSHOULDER      action: "retard" }
gamepad_trigger  { input: GAMEPAD_RTRIGGER       action: "ascend" }
gamepad_trigger  { input: GAMEPAD_LTRIGGER       action: "descend" }
gamepad_trigger  { input: GAMEPAD_START          action: "pause" }

