#! /usr/bin/env python
import os

def configure(conf):
    pass

def build(bld):
    script = bld.new_task_gen(features = 'cxx cstaticlib ddf',
                          includes = '../proto .',
                          target = 'input',
                          proto_gen_py = True,
                          protoc_includes = '../proto')
    script.find_sources_in_dirs(['.', '../proto'])

    bld.install_files('${PREFIX}/include/input', 'input.h')
    bld.install_files('${PREFIX}/share/proto', '../proto/input_ddf.proto')

    bld.add_subdirs('test')
